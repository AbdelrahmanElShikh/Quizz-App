<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textStle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#f8f8f8</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">#1f487c</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="radioGroupStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="viewStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#e87e03</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="radioButtonSyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">20dp</item>

    </style>

    <style name="checkBoxStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="imageStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
